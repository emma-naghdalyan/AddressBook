@model ContactViewModel

<div style="padding:30px; background-color:darkgray;">
    <h4 style="margin-left:440px; color:white;">View contact</h4>
</div>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="get">
    <fieldset style="width:50%; margin:auto; padding:20px; margin-top:50px;">
        <legend>Let's view a contact!</legend>
        <div class="form-group">
            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Address.Country">Country</label>
            <input asp-for="Address.Country" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Address.City">City</label>
            <input asp-for="Address.City" class="form-control" disabled/>
        </div>
        <div class="form-group">
            <label asp-for="Address.Street">Street</label>
            <input asp-for="Address.Street" class="form-control" disabled/>
        </div>
        <div class="form-group">
            <label asp-for="Address.ZIP">ZIP</label>
            <input asp-for="Address.ZIP" class="form-control" disabled/>
        </div>
        <br /><br />
        <button asp-action="Index" class="btn btn-secondary">Ok</button>
        <button asp-route-id="@Model.Id" class="btn btn-light" asp-action="Edit" type="submit">Edit</button>
    </fieldset>
</form>