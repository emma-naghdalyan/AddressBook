@model ContactViewModel

@section scripts
{
    <script asp-src-include="/lib/jquery/dist/*.min.js"></script>
    <script asp-src-include="/lib/jquery-validation/dist/jquery.*.min.js"></script>
    <script asp-src-include="/lib/jquery-validation-unobtrusive/*.min.js"></script>
}

<div style="padding:30px; background-color:darkgray;">
    <h4 style="margin-left:440px; color:white;">Create a contact</h4>
</div>

<form asp-action="Create" method="post">
    <fieldset style="width:50%; margin:auto; padding:20px; margin-top:50px;">
        <legend>Let's add a contact!</legend>
        <div class="form-group">
            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" class="form-control input-validation-error" required />
            <div><span asp-validation-for="FullName" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control input-validation-error" />
            <div><span asp-validation-for="Email" class="text-danger"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control input-validation-error" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Country">Country</label>
            <input asp-for="Address.Country" class="form-control input-validation-error" />
            <span asp-validation-for="Address.Country" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.City">City</label>
            <input asp-for="Address.City" class="form-control input-validation-error" />
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.Street">Street</label>
            <input asp-for="Address.Street" class="form-control input-validation-error" />
            <span asp-validation-for="Address.Street" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address.ZIP">ZIP</label>
            <input asp-for="Address.ZIP" class="form-control input-validation-error" />
            <span asp-validation-for="Address.ZIP" class="text-danger"></span>
        </div>
        <br /><br />
        <button class="btn btn-secondary" asp-action="Create" type="submit">Save</button>
    </fieldset>
</form>
<form asp-action="Index" method="get">
    <button asp-action="Index" style="position:relative;left:400px;bottom:55px;" class="btn btn-light myStyle">Cancel</button>
</form>